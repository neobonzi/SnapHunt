<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/welcome_scrollView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:fillViewport="true">	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@drawable/background"
		android:focusable="true"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:windowSoftInputMode="stateHidden" >
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight=".5" >
	        
	        <TextView
	            android:id="@+id/gameplay_judge_current_theme"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:text="@string/gameplay_theme" 
	            android:layout_marginTop="15dp"
	            android:textColor="@color/grey_text"
	            />

	        <TextView
	            android:id="@+id/gameplay_judge_pick"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_margin="5dp"
	            android:layout_below="@id/gameplay_judge_current_theme"
	            android:text="@string/gameplay_judge"
				android:textColor="@color/login_button_background"
				android:textStyle="bold"/>
	        
	    </RelativeLayout>


	   	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	       	
	       	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	         >
	        <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" >
	        	<ImageButton
		   		    android:id="@+id/gameplay_judge_player1"
		   		    android:layout_width="match_parent"
		   		    android:layout_height="match_parent"
		   		    android:layout_centerVertical="true"
		   		    android:layout_margin="0dp"
		   		    android:src="@drawable/blank_head" />
	        </RelativeLayout>
	       	<RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" >
	        	<ImageButton
		   		    android:id="@+id/gameplay_judge_player2"
		   		    android:layout_width="match_parent"
		   		    android:layout_height="match_parent"
		   		    android:layout_centerVertical="true"
		   		    android:layout_margin="0dp"
		   		    
		   		    android:src="@drawable/blank_head" />
	        </RelativeLayout>
	        <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" >
   				<ImageButton
		   		    android:id="@+id/gameplay_judge_player3"
		   		    android:layout_width="match_parent"
		   		    android:layout_height="match_parent"
		   		    android:layout_centerVertical="true"
		   		    android:layout_margin="0dp"
		   		    android:src="@drawable/blank_head" />
			</RelativeLayout>
			</LinearLayout>
	   </RelativeLayout>
	  	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight=".5" >

	        <TextView
	            android:id="@+id/gameplay_judge_timeleft"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/gameplay_timeleft"
	            android:textColor="@color/grey_text" />

	        <Button
	            android:id="@+id/gameplay_judge_submit_button"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@+id/gameplay_judge_timeleft"
	            android:layout_margin="5dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:layout_marginBottom="10dp"
	            android:layout_centerHorizontal="true"
	            android:text="@string/gameplay_judge_submit_button" 
	            android:textColor="@color/grey_text"
	            android:background="@color/login_button_background"
	            android:clickable="true"
	            android:onClick="showRoundSummary"/>
	     	
	    </RelativeLayout>
	
	
	</LinearLayout>
</ScrollView>
