<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/welcome_scrollView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:fillViewport="true">	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@drawable/background"
		android:focusable="true"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:windowSoftInputMode="stateHidden" >
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.5" >
	       	<TextView
	            android:id="@+id/gameplay_current_theme"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
				android:layout_marginTop="15dp"
	            android:text="@string/gameplay_theme"
	            android:textColor="@color/grey_text" />
	       
	        <ImageButton
	            android:id="@+id/gameplay_user_photo_button"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@id/gameplay_current_theme"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/ic_camera"
	            android:layout_margin="15dp"
	            android:clickable="true"
	            android:onClick="startRoundSummary"
	             />


	        
	    </RelativeLayout>

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight=".3" >
			 <TextView
	            android:id="@+id/gameplay_timeleft"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/gameplay_timeleft" 
	            android:layout_marginTop="15dp"
	            android:textColor="@color/grey_text"
	            />

	     	
	    </RelativeLayout>
	   	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" >
	       	
	       	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        
	         >
	        <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" >
	        	<ImageButton
		   		    android:id="@+id/gameplay_player1"
		   		    android:layout_width="match_parent"
		   		    android:layout_height="match_parent"
		   		    android:layout_centerVertical="true"
		   		    android:layout_margin="5dp"
		   		    android:src="@drawable/blank_head" />
	        </RelativeLayout>
	        <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" >
   				<ImageButton
		   		    android:id="@+id/gameplay_player2"
		   		    android:layout_width="match_parent"
		   		    android:layout_height="match_parent"
		   		    android:layout_centerVertical="true"
		   		    android:layout_margin="5dp"
		   		    android:src="@drawable/blank_head" />
			</RelativeLayout>
			</LinearLayout>
	   </RelativeLayout>
	  
	
	
	</LinearLayout>
</ScrollView>
