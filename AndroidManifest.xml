<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snaphunt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
\	
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.snaphunt.Welcome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.snaphunt.Register"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/registration"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>
        <activity
            android:name="com.example.snaphunt.GamesOverview"
            android:label="@string/title_activity_games_overview" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.example.snaphunt.CreateGame"
            android:label="@string/title_activity_create_game"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"> 
        </activity>
        <activity
            android:name="com.example.snaphunt.ThemePicker"
            android:label="@string/title_activity_theme_picker"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>
        <activity
            android:name="com.example.snaphunt.Gameplay"
            android:label="@string/title_activity_gameplay"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>
        <activity
            android:name="com.example.snaphunt.RoundSummary"
            android:label="@string/title_activity_round_summary"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>
        <activity
            android:name="com.example.snaphunt.GameplayJudge"
            android:label="@string/title_activity_gameplay_judge"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"  >
        </activity>
    </application>

</manifest>
